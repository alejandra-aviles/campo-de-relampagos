<section class="video-article">
  {.section item}
    {body}
    <header>
     <h1>{title}</h1>
     <h2>{author.displayName}</h2>
     </header>
     <div class="columns">
      <div class="col col-9">
        <div class="date-share">
          <h6>Publicado el {addedOn|date %F}</h6>
          <a><h6>{@|apply facebook.block}</h6></a>
          <a><h6>{@|apply twitter.block}</h6></a>
        </div>
        <p>{excerpt}</p>
      </div>
      <div class="col col-3">
      </div>      
    </div>
  {.end}
</section>