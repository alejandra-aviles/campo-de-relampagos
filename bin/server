#!/usr/bin/env bash

watchSass(){
	watch "sassc -I bower_components/gridle/sass sass-styles/app.scss > styles/styles.css && echo '---> $(date +%H:%m:%S) updated styles'" sass-styles/
}

runServer(){
	sqs server --reload
}

watchSass &
watchSassPid=$!

runServer &
runServerPid=$!

killAll(){
	kill $watchSassPid
	kill $runServerPid
	exit
}

trap killAll SIGINT SIGTERM

wait $watchSassPid
wait $runServerPid