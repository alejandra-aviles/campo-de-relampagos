<section>
	<div class="columns">
		<div class="col col-5">
			<squarespace:query collection="maquinas-de-vision" limit="1">
			    {.repeated section items}
				    <a class="item" href="{fullUrl}">
				    <div class="cover-wrapper">
			          <img src="{assetUrl}" />
			          <div class="cover"></div>
			        </div>
				      <div class="item-info">
			          	<span><i class="fa fa-play"></i> Máquinas de visión {addedOn|date %F}</span>
			          	<header>
				            <h1>{title}</h1>
				            <h2>{author.displayName}</h2>
			          	</header>
			            <p>{excerpt}</p>
				      </div>
				    </a>
			    {.end}
			</squarespace:query>		
			<squarespace:query collection="comunidad" limit="1">
			    {.repeated section items}
				    <a class="item" href="{fullUrl}">
		            <div class="cover-wrapper">
			          <img src="{assetUrl}" />
			          <div class="cover"></div>
			        </div>
				      <div class="item-info">
			          	<span><i class="fa fa-comment"></i> Comunidad {addedOn|date %F}</span>
			          	<header>
				            <h1>{title}</h1>
				            <h2>{author.displayName}</h2>
			            </header>
			            <p>{excerpt}</p>
				      </div>
				    </a>
			    {.end}
			</squarespace:query>
		</div>
		<div class="col col-5">
			<squarespace:query collection="whatiswriting" limit="1">
			    {.repeated section items}
				    <a class="item" href="{fullUrl}">
		            <div class="cover-wrapper">
			          <img src="{assetUrl}" />
			          <div class="cover"></div>
			        </div>
				      <div class="item-info">
			          	<span><i class="fa fa-paragraph"></i> Watiswriting {addedOn|date %F}</span>
			          	<header>
				            <h1>{title}</h1>
				            <h2>{author.displayName}</h2>
			            </header>
			            <p>{excerpt}</p>
				      </div>
				    </a>
			    {.end}
			</squarespace:query>
			<squarespace:query collection="whatishappening" limit="1">
			    {.repeated section items}
